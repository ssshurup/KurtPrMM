<Page x:Class="KurtPrMM.Pages.LoginP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KurtPrMM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginP" Background="White">

    <Grid>
        <StackPanel Width="200" Height="200">
            <TextBlock Text="Login" Margin="5"></TextBlock>
            <TextBox x:Name="LoginTB" Margin="5"></TextBox>
            <TextBlock Text="Password" Margin="5"></TextBlock>
            <TextBox x:Name="PassTB" Margin="5"></TextBox>
            <Button Content="LogIn" x:Name="LogBT" Margin="5" Click="LogBT_Click"></Button>
            <Button Content="Registration" x:Name="RegBT" Margin="5" Click="RegBT_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
