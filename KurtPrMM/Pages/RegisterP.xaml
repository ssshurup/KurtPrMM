<Page x:Class="KurtPrMM.Pages.RegisterP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KurtPrMM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterP" Background="White">

    <Grid>
        <StackPanel Width="200" Height="250">
            <TextBlock Text="Name" Margin="5"></TextBlock>
            <TextBox Text="{Binding name}" TextWrapping="Wrap" x:Name="NameTB" Margin="5"></TextBox>
            <TextBlock Text="Login" Margin="5"></TextBlock>
            <TextBox Text="{Binding login}" TextWrapping="Wrap" x:Name="LoginTB" Margin="5"></TextBox>
            <TextBlock Text="Password"  Margin="5"></TextBlock>
            <TextBox Text="{Binding password}" TextWrapping="Wrap" x:Name="PassTB"  Margin="5"></TextBox>
            <Button Content="Register" x:Name="RegBT"  Margin="5" Click="RegBT_Click"></Button>
            <Button Content="Back" x:Name="BackBT" Margin="5" Click="BackBT_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
